set selection-clipboard clipboard
set window-height 1024
set window-width 768

map = zoom in
map <PageUp> scroll half-up
map <PageDown> scroll half-down

set window-title-basename true
set window-title-home-tilde true
set page-padding 0

set recolor true
set recolor-darkcolor "#c6c6c6"
set recolor-lightcolor "#292929"

# colors
set statusbar-fg "#000000"
set statusbar-bg "#C2BFA5"
set inputbar-fg "#FFFFFF"
set inputbar-bg "#333333"
set completion-highlight-fg "#F0E68C"
set completion-highlight-bg "#5f9ea0"
set highlight-color rgba(15,25,0,0.2)
set highlight-active-color rgba(14,44,21,0.2)
set notification-fg "#FFFFFF"
set notification-bg "#333333"


set synctex true
set synctex-editor-command "/opt/homebrew/bin/emacsclient --no-wait +%{line} %{input}"
set selection-clipboard clipboard


